{{!-- views/books-edit.hbs --}}

<h2>Edit the story: {{story.title}}</h2>

<form action="/stories/{{story.id}}/edit" method="POST">
  <label>
    Title:
    <input type="text" name="title" value="{{story.title}}" />
  </label>
  
  <label>
    Description:
    <textarea name="description" cols="30" rows="4">{{story.description}}</textarea>
  </label>


  <button>Save changes</button>
</form>
