{{#if userInSession}}
<header class="welkom">
  <h1>Welcome {{ userInSession.username }}</h1>
   <div>
    <form id="create-book" action="stories/create" method="GET">
      <button class="btn btn-secondary btn-lg">Create story</button>
    </form>
  </div>
</header>

<br>
<main class="stories">
  <h2>Stories</h2>
  <hr>

<div class="story-cards">
  {{#each stories.stories}}
  <div class="card" style="width: 18rem;">
    <img src="images/story-book.jpeg" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">{{this.title}}</h5>
      <p class="card-text story-sum">{{this.description}}</p>
      <a href="/stories/{{id}}" class="card-link link">See details</a>
      <a href="/stories/{{id}}/edit" class="card-link link">Edit</a>
      <form action="/stories/{{id}}/delete" method="POST">
        <button type="submit" class="btn btn-secondary">Delete</button>
      </form>
    </div>
  </div>
  {{/each}}
  </div>

 
</main>

{{else}}
<p>You are not logged in</p>
{{/if}}