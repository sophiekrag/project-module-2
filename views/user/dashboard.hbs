{{#if userInSession}}
<header class="welkom">
    <h2>Welcome {{ userInSession.username }}</h2>
    <p>This is your profile page!</p>
</header>

{{!-- {{#each books.books}}
<p>{{this.title}}</p>
{{/each}} --}}

<h1>Books</h1>
<hr>
 
{{#each books.books}}
  <div>
    <h3>{{this.title}}</h3>
    <a href="/userProfile/{{id}}">See details</a>
    <a href="/userProfile/{{id}}/edit">Edit</a> {{!-- <-- add this line  --}}
  </div>
  <hr>
{{/each}}

<div class="d-grid gap-2 col-6 mx-auto">
    <form id="create-book" action="books/create" method="GET">
        <button class="btn btn-primary">Create book</button>
    </form>
</div>

<div class="d-grid gap-2 col-6 mx-auto">
    <form id="logout-form" action="/logout" method="POST">
        <button class="btn btn-primary">Logout</button>
    </form>
</div>

{{else}}
<p>You are not logged in</p>
{{/if}}